<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/viewPager"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtSpotName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"

        android:textSize="25sp"
        android:textColor="@color/theme_color"
        android:layout_below="@id/SliderDots"/>
    <TextView
        android:id="@+id/txtSpotCharges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:fontFamily="@font/sans"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/txtSpotName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Per Hour)"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtSpotName"/>
    <TextView
        android:id="@+id/txtSpotAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:fontFamily="@font/sans"
        android:textSize="14sp"
        android:textColor="@color/black"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtSpotCharges"/>


    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtSpotAddress"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />
</RelativeLayout>
