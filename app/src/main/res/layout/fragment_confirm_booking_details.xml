<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ConfirmBookingDetailsFragment">

    <TextView
        android:id="@+id/txtSpotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spot Name"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/theme_color"/>
    <TextView
        android:id="@+id/txtSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:fontFamily="@font/sans"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textDirection="rtl"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/txtSpotName"
        android:textColor="@color/theme_color"/>

    <TextView
        android:id="@+id/txtSpotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slot"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:layout_below="@id/txtSpotName"
        android:textColor="@color/theme_color"/>
    <TextView
        android:id="@+id/txtSlotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textDirection="rtl"
        android:paddingEnd="10dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtSpotName"
        android:textColor="@color/theme_color"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSlotTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/recyclerView">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txtTotalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="17sp"
        android:layout_below="@id/recyclerView"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtTotalCharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2500"
        android:fontFamily="@font/sans"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textDirection="rtl"
        android:paddingEnd="10dp"
        android:layout_marginTop="25dp"
        android:textSize="17sp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/recyclerView"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_theme_color"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:backgroundTint="@color/theme_color"/>

</RelativeLayout>