<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RecieptFragment">

<RelativeLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="45dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/round_corner_shape"
    >
 <TextView
     android:id="@+id/txtSuccessTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="14sp"
     android:layout_centerHorizontal="true"
     android:text="Booking Successful"
     android:textColor="@color/white"
     android:layout_marginTop="40dp"/>
 <TextView
     android:id="@+id/txtSpotId"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="11sp"
     android:textStyle="bold"
     android:layout_centerHorizontal="true"
     android:text="Spot # A01"
     android:layout_below="@id/txtSuccessTitle"
     android:textColor="@color/white"
     android:layout_marginTop="10dp"/>
<View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@id/txtSpotId"
    android:background="@color/white"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="10dp"
 />
 <TextView
     android:id="@+id/txtDurationTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="11sp"
     android:textStyle="bold"
     android:text="Duration"
     android:layout_marginLeft="25dp"
     android:layout_below="@id/divider"
     android:textColor="@color/white"
     android:layout_marginTop="10dp"/>
 <TextView
     android:id="@+id/txtPriceTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="11sp"
     android:textStyle="bold"
     android:text="Price"
     android:layout_marginLeft="25dp"
     android:layout_below="@id/txtDurationTitle"
     android:textColor="@color/white"
     android:layout_marginTop="25dp"/>
 <com.google.android.material.button.MaterialButton
     android:id="@+id/txtDuration"
     android:layout_width="120dp"
     app:cornerRadius="20dp"
     android:backgroundTint="@color/white"
     android:layout_height="35dp"
     android:textSize="11sp"
     android:layout_alignParentEnd="true"
     android:text="1 h"
     android:textAllCaps="false"
     android:textAlignment="center"
     android:layout_marginRight="25dp"
     android:layout_below="@id/divider"
     android:textColor="@color/black"
     android:layout_marginTop="10dp"/>

 <com.google.android.material.button.MaterialButton
     android:id="@+id/txtPrice"
     android:layout_width="120dp"
     app:cornerRadius="20dp"
     android:backgroundTint="@color/white"
     android:layout_height="35dp"
     android:textSize="11sp"
     android:layout_alignParentEnd="true"
     android:text="PKR 426.36"
     android:textAllCaps="false"
     android:textAlignment="center"
     android:layout_marginRight="25dp"
     android:layout_below="@id/txtDuration"
     android:textColor="@color/black"
     />

</RelativeLayout>


 <View
     android:id="@+id/circle"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginTop="22dp"

     android:layout_gravity="center"
     android:layout_centerHorizontal="true"
     android:background="@drawable/payment"/>
 <RelativeLayout
     android:layout_below="@id/layout1"
     android:layout_width="match_parent"
     android:layout_height="180dp"
     android:layout_marginTop="30dp"
     android:layout_marginLeft="25dp"
     android:layout_marginRight="25dp"
     android:background="@drawable/round_corner_shape"
     >
  <TextView
      android:id="@+id/txtSpotName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_centerHorizontal="true"
      android:text="Fleet Parking Area"
      android:textColor="@color/white"
      android:layout_marginTop="10dp"/>
  <TextView
      android:id="@+id/txtSpotAddress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="11sp"
      android:layout_centerHorizontal="true"
      android:text="Fleet Parking Area"
      android:textColor="#6683cb"
      android:layout_below="@id/txtSpotName"
      android:layout_marginTop="5dp"/>
  <View
      android:id="@+id/circle2"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginLeft="-22dp"

      android:layout_gravity="center"
      android:layout_centerVertical="true"
      android:background="@drawable/white_circle"/>
  <View
      android:id="@+id/circle3"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginRight="-22dp"
      android:layout_alignParentEnd="true"

      android:layout_gravity="center"
      android:layout_centerVertical="true"
      android:background="@drawable/white_circle"/>
  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnSave"
      android:layout_width="130dp"
      android:layout_height="45dp"
      android:textAllCaps="false"
      app:cornerRadius="18dp"
      android:textSize="12sp"
      android:backgroundTint="@color/white"
      android:textColor="@color/black"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="20dp"
      android:layout_marginBottom="10dp"
      android:text="Save">

  </com.google.android.material.button.MaterialButton>
  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnRedirectToGoogleMaps"
      android:layout_width="130dp"
      android:layout_height="45dp"
      android:textAllCaps="false"
      app:cornerRadius="18dp"
      android:textSize="12sp"
      android:backgroundTint="@color/white"
      android:textColor="@color/black"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_marginRight="20dp"
      android:layout_marginBottom="10dp"
      android:text="Google maps">

  </com.google.android.material.button.MaterialButton>
 </RelativeLayout>

</RelativeLayout>