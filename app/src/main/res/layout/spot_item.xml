<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spotCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E6FBF9F9"
        app:cardPreventCornerOverlap="false"
        app:strokeColor="#000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E6FBF9F9"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#E6FBF9F9"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="#000"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/img_spot"
                    android:layout_width="95dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_view" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_spot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/card_img"
                android:fontFamily="@font/sans"
                android:text="Fleeting area"
                android:textColor="#0521BD"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_spot_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_spot_name"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/card_img"
                android:fontFamily="@font/sans"
                android:text="Fleeting area"
                android:textColor="#3A3939"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_car"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/txt_spot_address"
                android:layout_alignBottom="@id/card_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/card_img"
                android:src="@drawable/ic_car_parking"
                android:visibility="visible"></ImageView>

            <ImageView
                android:id="@+id/img_bike"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/txt_spot_address"
                android:layout_alignBottom="@id/card_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/img_car"
                android:src="@drawable/ic_car_parking"
                android:visibility="visible"></ImageView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignBottom="@id/img_bike"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/black"
                android:text="  Details  "

                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>