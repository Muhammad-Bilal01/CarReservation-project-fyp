<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CustomerBookingDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="ScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--            Top App Bar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/back_btn_img" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="My Bookings"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Parking Area"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
            <!-- Card View -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/spotCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#E6FBF9F9"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="#000"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E6FBF9F9"
                    android:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#E6FBF9F9"
                        app:cardCornerRadius="10dp"
                        app:cardPreventCornerOverlap="false"
                        app:strokeColor="#000"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/img_spot"
                            android:layout_width="95dp"
                            android:layout_height="140dp"
                            android:src="@drawable/ic_view" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/txt_spot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@id/card_img"
                        android:fontFamily="@font/sans"
                        android:text="Fleeting area"
                        android:textColor="#0521BD"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_spot_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_spot_name"
                        android:layout_toEndOf="@id/card_img"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sans"
                        android:text="Fleeting area"
                        android:textColor="#3A3939"
                        android:textSize="13sp" />

<!--                    <ImageView-->
<!--                        android:id="@+id/img_car"-->
<!--                        android:layout_width="35dp"-->
<!--                        android:layout_height="35dp"-->
<!--                        android:layout_below="@id/txt_spot_address"-->
<!--                        android:layout_alignBottom="@id/card_img"-->
<!--                        android:layout_toEndOf="@id/card_img"-->
<!--                        android:layout_marginLeft="5dp"-->
<!--                        android:layout_marginTop="30dp"-->
<!--                        android:layout_marginBottom="5dp"-->
<!--                        android:src="@drawable/ic_car_parking"-->
<!--                        android:visibility="visible"></ImageView>-->

<!--                    <ImageView-->
<!--                        android:id="@+id/img_bike"-->
<!--                        android:layout_width="35dp"-->
<!--                        android:layout_height="35dp"-->
<!--                        android:layout_below="@id/txt_spot_address"-->
<!--                        android:layout_alignBottom="@id/card_img"-->
<!--                        android:layout_marginLeft="5dp"-->
<!--                        android:layout_marginTop="30dp"-->
<!--                        android:layout_marginBottom="5dp"-->
<!--                        android:layout_toEndOf="@id/img_car"-->
<!--                        android:src="@drawable/ic_car_parking"-->
<!--                        android:visibility="visible"></ImageView>-->

                    <TextView
                        android:id="@+id/spotNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/card_img"
                        android:layout_alignBottom="@id/card_img"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:text="Spot # 01"
                        android:textAllCaps="false"
                        android:textColor="@color/theme_color"
                        android:textSize="12sp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Duration View -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Duration"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival time"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/arriving_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7C004AAD"
                        android:text="26 Dec 2024 04:00 pm"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:cornerRadius="20dp"
                        app:strokeWidth="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaving time"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/leaving_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7C004AAD"
                        android:text="26 Dec 2024 04:00 pm"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:cornerRadius="20dp"
                        app:strokeWidth="0dp" />
                </LinearLayout>
            </LinearLayout>
            <!--      Payment Method      -->
            <TextView
                android:id="@+id/payment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Payment Method"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/payment_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4177C0"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hassan Qadeer"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/seller_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**** **** 1234"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    />

                <ImageView
                    android:id="@+id/payment_img"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_view" />


            </LinearLayout>
            <!--      Amout      -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="#4177C0"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amountTxt"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="45dp"
                    android:backgroundTint="#7C004AAD"
                    android:text="PKR 200"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>