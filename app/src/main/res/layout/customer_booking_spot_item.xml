<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E6FBF9F9"
        app:cardPreventCornerOverlap="false"
        app:strokeColor="#000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#E6FBF9F9"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#E6FBF9F9"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="#000"
                app:strokeWidth="0dp">
                <ImageView
                    android:id="@+id/img_spot"
                    android:layout_width="95dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_view"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_spot_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ems="3"
                android:ellipsize="end"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/card_img"
                android:fontFamily="@font/sans"
                android:text="Fleeting area"
                android:textColor="#0521BD"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt_spot_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ems="3"
                android:ellipsize="end"
                android:layout_below="@id/txt_spot_name"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/card_img"
                android:fontFamily="@font/sans"
                android:text="Fleeting area"
                android:textColor="#3A3939"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_spot_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_spot_address"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/card_img"
                android:fontFamily="@font/sans"
                android:text="5 spot lefts"
                android:textColor="#3A3939"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_price_per_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_spot_left"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sans"
                android:text="PKR 250/hour"
                android:textColor="#3A3939"
                android:textSize="13sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/img_car"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/txt_spot_left"
                android:layout_alignBottom="@id/card_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/card_img"
                android:src="@drawable/ic_car_parking"></ImageView>
            <ImageView
                android:id="@+id/img_bike"
                android:layout_below="@id/txt_spot_left"
                android:layout_toEndOf="@id/img_car"
                android:layout_alignBottom="@id/card_img"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_car_parking"
                android:layout_marginBottom="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
            <ImageView
                android:id="@+id/img_more_info"
                android:layout_below="@id/txt_spot_left"
                android:layout_toLeftOf="@id/btnBook"
                android:layout_alignBottom="@id/card_img"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_information"
                android:layout_marginBottom="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp">
            </ImageView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBook"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:text="Book Now"
                android:textAllCaps="false"
                app:cornerRadius="20dp"
                android:layout_alignBottom="@id/img_bike"
                android:backgroundTint="@color/black"

                android:textColor="@color/white"
                android:textSize="12sp" />



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>