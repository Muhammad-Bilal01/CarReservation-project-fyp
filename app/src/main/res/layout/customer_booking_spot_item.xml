<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#E6FBF9F9"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="false"
        app:strokeColor="#000"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E6FBF9F9">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#E6FBF9F9"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="#000"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/img_spot"
                    android:layout_width="95dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_view" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_spot_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/card_img"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/sans"
                android:lines="1"
                android:text="Fleeting area"
                android:textColor="#0521BD"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt_spot_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_spot_name"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/card_img"
                android:ellipsize="end"
                android:ems="3"
                android:fontFamily="@font/sans"
                android:lines="1"
                android:text="Fleeting area"
                android:textColor="#3A3939"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_spot_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_spot_address"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/card_img"
                android:fontFamily="@font/sans"
                android:text="5 spot lefts"
                android:textColor="#3A3939"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_price_per_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_spot_left"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sans"
                android:text="PKR 250/hour"
                android:textColor="#3A3939"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_rating"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/txt_spot_left"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/card_img"
                android:src="@drawable/star"></ImageView>

            <TextView
                android:id="@+id/rating_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_spot_left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/img_rating"
                android:text="4.7"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/img_no_user"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/txt_spot_left"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/rating_txt"
                android:src="@drawable/ic_user"
                ></ImageView>

            <TextView
                android:id="@+id/noOfUser_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_spot_left"
                android:layout_toEndOf="@id/img_no_user"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="5dp"
                android:text="4"
                android:textStyle="bold"
                />




